{% extends "base.html.twig" %}

{% block title %}
	Admin Home Page
{% endblock %}

{% block body %}
	<main class="d-flex flex-column gap-5 align-items-center">
		<h1>Gerer les Ingrédients</h1>
		<a class="btn btn-primary" href={{path('admin_ingredient_create')}}>Créer</a>
		<table class="table table-striped table-bordered w-75">
			<thead class="table-dark">
				<tr>
					<th>Titre</th>
					<th>Prix</th>
					<th>Date de Création</th>
					<th colspan="2">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for ingredient in ingredients %}
					<tr>
						<td>{{ingredient.name}}</td>
						<td>{{ingredient.price}}</td>
						<td>{{ingredient.createdAt|date('d/m/Y')}}</td>
						<td>
							<a class="btn btn-warning" href="">Editer</a>
						</td>
						<td>
							<a class="btn btn-danger" href="">Supprimer</a>
						</td>
					</tr>
					<tr></tr>
				{% endfor %}
			</tbody>
		</table>
	</main>

{% endblock %}
